<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="点滴助手1"
        ohos:text_size="50"/>

    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:column_count="2"
        ohos:layout_alignment="center"
        ohos:row_count="1"
        ohos:text_alignment="center"
        ohos:top_margin="60vp">

        <Text
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:text="液体总量"
            ohos:text_alignment="center"
            ohos:text_size="50"/>

        <TextField
            ohos:id="$+id:liquid_total"
            ohos:text_input_type="pattern_number"
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:hint="请输入药品总量(毫升)："
            ohos:text_alignment="center"
            ohos:text_size="50"/>

        <Text
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:text="每20滴低落所需时间（秒）："
            ohos:text_alignment="center"
            ohos:text_size="50"
            />

        <TextField
            ohos:id="$+id:drip_spend_Time"
            ohos:text_input_type="pattern_number"
            ohos:height="match_content"
            ohos:width="150vp"
            ohos:hint="每20滴低落所需时间（秒）"
            ohos:text_alignment="center"
            ohos:text_size="50"/>

    </TableLayout>

    <Button
        ohos:id="$+id:clickButton"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text="开始倒计时"
        ohos:text_size="50"/>


</DirectionalLayout>